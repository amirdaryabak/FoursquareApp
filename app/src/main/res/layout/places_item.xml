<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_et_border_gray"
    android:layout_margin="4dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/dummy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name:"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dummy_name"
        app:layout_constraintStart_toEndOf="@+id/dummy_name"
        app:layout_constraintTop_toTopOf="@+id/dummy_name"
        tools:text="Place Name" />

    <TextView
        android:id="@+id/dummy_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/dummy_name"
        app:layout_constraintTop_toBottomOf="@+id/dummy_name" />

    <TextView
        android:id="@+id/place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dummy_address"
        app:layout_constraintStart_toEndOf="@+id/dummy_address"
        app:layout_constraintTop_toTopOf="@+id/dummy_address"
        tools:text="Place Address" />


</androidx.constraintlayout.widget.ConstraintLayout>